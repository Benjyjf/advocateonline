container_commands:
  01_install_solr:
    command: "
    sudo rpm -i https://download.elastic.co/elasticsearch/release/org/elasticsearch/distribution/rpm/elasticsearch/2.4.6/elasticsearch-2.4.6.rpm &&
    sudo chkconfig --add elasticsearch"
    leader_only: true
    ignoreErrors: true
  02_start_elasticsearch:
    command: "sudo service elasticsearch start"
    ignoreErrors: true     